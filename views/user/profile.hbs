<div class="row">
    <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-1">
        <h1>User Profile</h1>
        <hr>
        <h3>My Orders</h3>
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge">{{ this.price }}</span> 
                                {{ this.item.title }} | {{ this.qty}} unit
                            </li>
                        {{/each }}
                    </ul>
                </div>
                <div class="panel-footer">
                  <strong>TotalPrice:${{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>
